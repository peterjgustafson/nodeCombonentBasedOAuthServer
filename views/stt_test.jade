doctype html
html
  head
    title Speech to Text Audio Streamer Test App
    link(rel='stylesheet', href='/bootstrap-3.2.0-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/site.css')
    script(src='/javascripts/jquery-1.11.1.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='/javascripts/binary.js')
    script(src='/javascripts/re-sampler.js')
    script(src='/javascripts/AIH_Speaker_ID_TestApp.js')
  body
    .container
      .page-header
        h1
          | AIH Speaker ID STT Test Application
      button#start-rec-btn.btn.btn-primary Start Listening
      button#stop-rec-btn.btn.btn-primary Stop Listening
      #canvas-container
        canvas#canvas(width='600', height='100')
        ul.nav.nav-pills
          li.active
            a(data-toggle='pill', href='#transcriptTab') Full Transcript
          li
            a(data-toggle='pill', href='#lastUtterenceTab') Last Utterence
          li
            a(data-toggle='pill', href='#speakersTab') Speakers
          li
            a(data-toggle='pill', href='#keywordsTab') Keywords
          li
            a(data-toggle='pill', href='#semanticsTab') Semantics
          li
            a(data-toggle='pill', href='#posTab') Parts of Speech
          li
            a(data-toggle='pill', href='#resultsTab') JSON
        .tab-content
          #transcriptTab.tab-pane.fade.in.active
            #transcript
              b Waston Says:
              #transcriptWatson
              b Google Says:
              #transcriptGoogle
          #lastUtterenceTab.tab-pane.fade
            #lastUtterence
              b Waston Says:
              #lastUtterenceWatson
              b Google Says:
              #lastUtterenceGoogle
          #speakersTab.tab-pane.fade
            #speakers
          #keywordsTab.tab-pane.fade
            #keywords
          #semanticsTab.tab-pane.fade
            #semantics
              b Waston Says:
              #semanticRolesWatson
              b Google Says:
              #semanticRolesGoogle
          #posTab.tab-pane.fade
            #pos
              b Waston Says:
              #posWatson
              b Google Says:
              #posGoogle
            a(href='https://www.clips.uantwerpen.be/pages/mbsp-tags' target='_blank')
              span Penn Treebank II tag set
          #resultsTab.tab-pane.fade
            textarea#restult_text(style='width: 100%; height: 300px;')
  script.